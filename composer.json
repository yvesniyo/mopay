{
    "name": "yves/mopay",
    "description": "This package provide easy way to make mobile money payments from mopay gateway",
    "type": "library",
    "require": {
        "guzzlehttp/guzzle": "^4.3",
        "laravel/framework": "^5.0"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Niyobuhungiro Yves",
            "email": "niyobuhungiro.yves@gmail.com"
        }
    ],
    "keywords": ["mobile-money", "mopay", "mtn-mobile-money","rwanda","laravel-package","payment","kwisyure","mtn"],
    "autoload": {
        "psr-4": {
            "Yves\\Mopay\\": "src/"
        }
    },
    "extra":{
        "laravel":{
            "providers":[
                "Yves\\Mopay\\Providers\\MopayServiceProvider",
                "Yves\\Mopay\\Providers\\EventServiceProvider"
            ]
        }
    }
}
